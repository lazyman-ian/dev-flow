{
  "name": "dev-flow-mcp-server",
  "version": "2.1.0",
  "description": "MCP Server for dev-flow plugin - development workflow automation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=../scripts/mcp-server.cjs --external:child_process --external:fs --external:path --external:os",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "mcp",
    "claude",
    "workflow",
    "continuity"
  ],
  "author": "guoyuan94",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
