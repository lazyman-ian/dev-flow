{
  "name": "dev-flow",
  "version": "3.12.0",
  "description": "Unified development workflow: planning → coding → commit → PR → release with VDD (Verification-Driven Development)",
  "author": {
    "name": "lazyman"
  },
  "repository": "https://github.com/lazyman-ian/dev-flow",
  "license": "MIT",
  "keywords": [
    "workflow",
    "git",
    "ios",
    "android",
    "continuity",
    "ledger",
    "reasoning",
    "task-management",
    "meta-iterate",
    "self-improve",
    "vdd",
    "verification"
  ],
  "skills": "./skills/",
  "commands": "./commands/",
  "mcpServers": "./.mcp.json",
  "lspServers": "./.lsp.json",
  "bundledMcpServers": {
    "dev-flow-mcp": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/scripts/mcp-server.cjs"],
      "autoStart": true,
      "restartOnCrash": true,
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
